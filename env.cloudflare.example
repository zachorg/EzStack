# Core service ports
PORT_EZSTACK=8080
PORT_EZAUTH=8081

# Redis (required)
REDIS_URL=redis://redis:6379

# Email (required for OTE)
EMAIL_FROM=no-reply@ezstack.app
EMAIL_DRY_RUN=false
OTP_DRY_RUN=false

# OTP/OTE defaults
OTP_TTL_SECONDS=300
OTP_LENGTH=6
OTP_MAX_ATTEMPTS=5
OTE_TTL_SECONDS=300
OTE_LENGTH=6
OTE_MAX_ATTEMPTS=5

# Rate limits
RESEND_COOLDOWN_SEC=30
DEST_PER_MINUTE=5
RATE_ROUTE_MAX=30

# AWS/SES Configuration
AWS_REGION=us-east-1
SQS_ENABLE=false

# Firebase (fill in your values)
FIREBASE_PROJECT_ID=your-firebase-project-id

# Next.js Firebase (required for the frontend)
NEXT_PUBLIC_FIREBASE_API_KEY=your-web-api-key-here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef123456

# Production URLs for Cloudflare
NEXT_PUBLIC_API_BASE_URL=https://api.ezstack.app
NEXT_PUBLIC_SITE_URL=https://ezstack.app
CORS_ORIGIN=https://ezstack.app

# API key hashing pepper (change this!)
APIKEY_PEPPER=your-secure-random-string-here

# Auth caching
APIKEY_CACHE_TTL_MS=30000
APIKEY_REDIS_TTL_SEC=60
AUTH_FAIL_SAFE=false

# Development API Key (for testing scripts)
EZAUTH_API_KEY=
